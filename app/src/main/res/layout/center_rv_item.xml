<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Name"
        android:padding="3dp"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:drawableLeft="@drawable/ic_hospital"
        android:drawablePadding="4dp"
        android:id="@+id/idTVCenterName"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Location"
        android:layout_below="@id/idTVCenterName"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:id="@+id/idTVCenterLocation"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_location"
        />

    <TextView
        android:id="@+id/idTVCenterTimings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Timmings"
        android:layout_below="@id/idTVCenterLocation"
        android:textColor="@color/black"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:drawableLeft="@drawable/ic_timmings"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_timmings"
        />

    <LinearLayout
        android:id="@+id/idLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="3dp"
        android:layout_below="@id/idTVCenterTimings"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vaccine Name"
            android:drawableLeft="@drawable/ic_vaccine"
            android:drawablePadding="4dp"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:id="@+id/idTVaccineName"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fees"
            android:textColor="@color/black"
            android:id="@+id/idTVVaccinesFees"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="3dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_below="@id/idLL"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Age Limit"
            android:id="@+id/idTVAgeLimit"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/idTVAvaliability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avaliability"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:padding="3dp"
            />



    </LinearLayout>







</RelativeLayout>

</androidx.cardview.widget.CardView>